@model InAndOut.Models.Item
@{
    ViewData["Title"] = "Delete";
}


<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row font-weight-bold" align="center">
                    <div class="col-4">
                        <label asp-for="ItemName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Borrower"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Lender"></label>
                    </div>
                </div>
                <div class="form-group row" align="center">
                    <div class="col-4">
                        <input asp-for="ItemName" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Borrower" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Lender" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row" align="center">
                    <div class="col-6">
                        <input type="submit" class="btn btn-danger w-100" value="Delete" />
                    </div>
                    <div class="col-6">
                        <a asp-controller="Item" asp-action="Index" class="btn btn-success w-100">Back</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
